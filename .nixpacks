[phases.setup]
nixPkgs = ["nodejs-20_x", "pnpm"]

[phases.install]
cmds = ["pnpm install --frozen-lockfile --prefer-offline"]

[phases.build]
cmds = [
  "pnpm --filter @ticketz/storage run prisma:generate",
  "pnpm --filter @ticketz/api run build"
]

[start]
cmd = "pnpm --filter @ticketz/api run start"
