{
  "root": true,
  "env": {
    "es2022": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "rulePaths": ["./eslint-rules"],
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": "latest"
      },
      "plugins": ["@typescript-eslint"],
      "extends": ["plugin:@typescript-eslint/recommended"]
    },
    {
      "files": ["**/*.{js,jsx,ts,tsx}"],
      "rules": {
        "no-forbidden-tailwind-colors": [
          "error",
          {
            "allowlistPath": "./config/forbidden-tailwind-exceptions.json",
            "baseDir": "."
          }
        ]
      }
    },
    {
      "files": ["packages/*/src/**/*.{ts,tsx}", "packages/*/src/**/*.{js,jsx}"],
      "rules": {
        "no-restricted-imports": [
          "error",
          {
            "patterns": ["**/packages/*/src/**"]
          }
        ]
      }
    }
  ]
}
