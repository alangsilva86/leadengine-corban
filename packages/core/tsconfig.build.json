{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "declaration": true,
    "declarationMap": false,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "dist"
