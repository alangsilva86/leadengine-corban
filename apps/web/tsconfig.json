{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "allowJs": true,
    "types": ["node"],
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@ticketz/contracts": ["../../packages/contracts/src/index.ts"],
      "@ticketz/contracts/*": ["../../packages/contracts/src/*"]
    }
  },
  "include": [
    "src",
    "scripts",
    "vite.config.ts",
    "vite.config.js",
    "vite.build.ci.mjs",
    "server.mjs",
    "server.proxy-helpers.mjs",
    "tailwind.config.ts",
    "tailwind.tokens.js"
  ],
  "exclude": ["dist", "node_modules"]
}
