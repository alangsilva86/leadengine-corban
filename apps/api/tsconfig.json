{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "module": "Node16",
    "moduleResolution": "Node16",
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@ticketz/contracts": ["../../packages/contracts/src/index.ts"],
      "@ticketz/contracts/*": ["../../packages/contracts/src/*"],
      "@ticketz/wa-contracts": ["../../packages/wa-contracts/src/index.ts"],
      "@ticketz/wa-contracts/*": ["../../packages/wa-contracts/src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "**/*.test.*",
    "**/*.spec.*",
    "**/__tests__/**",
    "**/tests/**",
    "src/routes/webhooks.test.ts"
  ],
  "references": [
    { "path": "../../packages/contracts" },
    { "path": "../../packages/shared" },
    { "path": "../../packages/core" },
    { "path": "../../packages/storage" },
    { "path": "../../packages/wa-contracts" }
  ]
}
