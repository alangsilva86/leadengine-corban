{
  "name": "ticketz-leadengine",
  "version": "1.0.0",
  "description": "Sistema híbrido de tickets e gestão de leads com arquitetura moderna",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "doctor": "node scripts/doctor.mjs",
    "prebuild": "pnpm exec prisma generate --schema=prisma/schema.prisma",
    "start": "pnpm --filter web run start",
    "build": "pnpm run build:libs && pnpm run build:api && pnpm run build:web",
    "build:libs": "pnpm --filter @ticketz/shared build && pnpm --filter @ticketz/core build && pnpm --filter @ticketz/storage build && pnpm --filter @ticketz/integrations build",
    "build:api": "pnpm --filter @ticketz/api build",
    "build:web": "pnpm --filter @ticketz/web build",
    "dev": "pnpm -r --parallel dev",
    "lint": "pnpm -r lint",
    "typecheck": "pnpm --filter @ticketz/integrations exec tsc -p tsconfig.build.json --noEmit",
    "test": "pnpm --filter @ticketz/api exec vitest run src/routes/__tests__/campaigns.e2e.spec.ts",
    "api:dev": "pnpm --filter @ticketz/api dev",
    "web:dev": "pnpm --filter @ticketz/web dev",
    "admin:dev": "pnpm --filter @ticketz/admin dev",
    "core:build": "pnpm --filter @ticketz/core build",
    "shared:build": "pnpm --filter @ticketz/shared build",
    "storage:build": "pnpm --filter @ticketz/storage build",
    "integrations:build": "pnpm --filter @ticketz/integrations build",
    "start:api": "pnpm --filter @ticketz/api start",
    "start:web": "pnpm --filter web run start"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "prettier": "^3.1.1",
    "prisma": "^5.7.1",
    "tsup": "8.5.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.19 <21",
    "pnpm": "9.12.3"
  },
  "packageManager": "pnpm@9.12.3",
  "pnpm": {
    "overrides": {
      "libsignal": "npm:libsignal@1.0.7"
    }
  },
  "keywords": [
    "tickets",
    "leads",
    "crm",
    "whatsapp",
    "typescript",
    "nodejs",
    "monorepo"
  ]
}
