{
  "name": "ticketz-leadengine",
  "version": "1.0.0",
  "description": "Sistema híbrido de tickets e gestão de leads com arquitetura moderna",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "doctor": "node scripts/doctor.mjs",
    "depcheck": "pnpm exec depcheck --skip-missing --ignores=prettier,eslint-config-prettier,eslint-plugin-prettier,@types/node,@typescript-eslint/eslint-plugin,@typescript-eslint/parser",
    "prebuild": "pnpm --filter @ticketz/storage run prisma:generate",
    "db:migrate:deploy": "node scripts/run-prisma-migrate-deploy.mjs",
    "start": "pnpm --filter web run start",
    "build": "pnpm run build:libs && pnpm run build:api && pnpm run build:web",
    "build:css-report": "cross-env GENERATE_CSS_REPORT=true pnpm run build && pnpm --filter web run css:report",
    "build:libs": "pnpm --filter @ticketz/contracts build && pnpm --filter @ticketz/shared build && pnpm --filter @ticketz/core build && pnpm --filter @ticketz/storage build",
    "build:api": "pnpm --filter @ticketz/api build",
    "build:web": "pnpm --filter web build",
    "dev": "pnpm -r --parallel dev",
    "lint": "eslint --max-warnings=0 .",
    "typecheck": "pnpm exec tsc --noEmit",
    "test": "pnpm --filter @ticketz/api exec vitest run src/routes/__tests__/campaigns.e2e.spec.ts",
    "test:playwright": "pnpm exec playwright test",
    "api:dev": "pnpm --filter @ticketz/api dev",
    "web:dev": "pnpm --filter web dev",
    "core:build": "pnpm --filter @ticketz/core build",
    "shared:build": "pnpm --filter @ticketz/shared build",
    "storage:build": "pnpm --filter @ticketz/storage build",
    "start:api": "pnpm --filter @ticketz/api start",
    "start:web": "pnpm --filter web run start",
    "test:whatsapp": "pnpm exec tsx scripts/whatsapp-smoke-test.ts",
    "ts-prune": "pnpm exec ts-prune"
  },
  "dependencies": {
    "@prisma/client": "5.22.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@playwright/test": "^1.56.0",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.7",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.22",
    "globals": "^15.12.0",
    "minimatch": "^10.0.3",
    "prettier": "^3.1.1",
    "prisma": "5.22.0",
    "socket.io-client": "^4.8.1",
    "ts-prune": "^0.10.3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "typescript-eslint": "^8.18.2"
  },
  "engines": {
    "node": ">=20.19 <21",
    "pnpm": "9.12.3"
  },
  "packageManager": "pnpm@9.12.3",
  "pnpm": {
    "overrides": {
      "libsignal": "npm:libsignal@1.0.7"
    }
  },
  "keywords": [
    "tickets",
    "leads",
    "crm",
    "whatsapp",
    "typescript",
    "nodejs",
    "monorepo"
  ]
}
